{
    "compilerOptions": {
        "target": "ES2022", // Or 2022
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "module": "ESNext",
        "outDir": "build",
        "moduleResolution": "node",
        "declaration": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "importHelpers": false,
        "noFallthroughCasesInSwitch": true
    },
    "compileOnSave": true
}
